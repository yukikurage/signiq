{
  "name": "@quon/core",
  "version": "0.3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "publish": "npm run build && npm publish --access public",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write src/**/*.{ts,tsx,js,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,json}",
    "test": "node --test --import tsx tests/**/*.test.ts",
    "test:watch": "node --test --watch --import tsx tests/**/*.test.ts",
    "examples": "tsx examples/basic.ts",
    "benchmark": "for file in benchmarks/*.bench.ts; do tsx \"$file\"; done"
  },
  "keywords": [
    "reactive",
    "generator",
    "coroutine",
    "async",
    "typescript"
  ],
  "author": "yukikurage",
  "license": "MIT",
  "description": "A lightweight reactive programming library using generator-based routines",
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quon-org/core.git"
  },
  "bugs": {
    "url": "https://github.com/quon-org/core/issues"
  },
  "homepage": "https://github.com/quon-org/core#readme",
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@types/benchmark": "^2.1.5",
    "benchmark": "^2.1.4"
  }
}
